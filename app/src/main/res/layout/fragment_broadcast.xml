<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"

    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/model_margin_top"
        android:background="@color/colorBg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/model_margin_top"
            android:background="@color/colorBgWhite"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/colorTextShallow"
                android:text="今日问题"
                android:layout_marginTop="@dimen/model_margin_title"
                android:layout_marginLeft="@dimen/model_margin_title"
                android:layout_marginBottom="@dimen/model_margin_title"
                />
            <ImageView
                android:id="@+id/broadcast_today_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/broadcast_image_height"
                android:scaleType="fitXY"
                android:src="@drawable/broadcast_img_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/model_margin_top"
            android:background="@color/colorBgWhite"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/broadcast_submit_img"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/broadcast_submit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/model_margin_top"
            android:background="@color/colorBgWhite"
            android:orientation="vertical"
            android:id="@+id/broadcast_list_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/colorTextShallow"
                android:text="往日问题"
                android:layout_marginTop="@dimen/model_margin_title"
                android:layout_marginLeft="@dimen/model_margin_title"

                />
            <!--<ListView-->
                <!--android:id="@+id/broadcast_list_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

            <!--</ListView>-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>
