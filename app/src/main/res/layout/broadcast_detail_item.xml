<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@color/colorBgWhite">

    <LinearLayout
        android:id="@+id/bd_item_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bd_item_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="1dp"
            android:background="@drawable/me_avatar_bg"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/bd_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/colorPrimaryDark"
            android:text="测试者"/>
    </LinearLayout>

    <TextView
        android:id="@+id/bd_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/text_normal"
        android:text="2016-12-01"/>

    <TextView
        android:id="@+id/bd_item_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/bd_item_user"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/colorPrimaryDark"
        android:text="随时三醒一下，绘制我的专属生活轨迹，每日十分钟记录，每周一篇周报总结，每年不定期昨日重现，记......"/>

</RelativeLayout>